      <div class="row">
        <% itemsRelate.forEach((item)=>{ %>
        <div class="col-md-6 col-lg-3">
          <a href="/du-an/<%= item.id %>">
            <div class="grid">
              <figure class="effect-lily"> <img src="<%= pathUpload + item.thumb0 %>" alt="img12">
                <figcaption>
                  <h4 style="font-size: 20px;"><a href="/du-an/<%= item.id %>"><%= item.title %></a></h4>
                  <p><%= item.description %></p>
