
<% 
const collection = "articles";
const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
const pathUpload ="backend/adminlte/images/articles/";
%>

<% include ./../../helpers/sectionbox %>


<% include ./../../elements/errors %>


<div class="card card-info card-outline">
<form action="<%= linkPrefix %>save/" method="POST" class="mb-0"  enctype="multipart/form-data">
    <div class="card-body">
    
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="name" class="form-control form-control-sm" id="name_slug" onkeyup="ChangeToSlug();" value="<%= item.name %>"  >
            </div>
        </div>
        <div class="form-group row">
            <label for="slug" class="col-sm-2 col-form-label text-sm-right required">Slug</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="slug" class="form-control form-control-sm" id="slug" value="<%= item.slug %>"  >
            </div>
        </div>
       
        <!-- upload anh -->
        <div class="form-group row">
            <label for="thumb" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
            <div class="col-xs-12 col-sm-8">
                <input type="number" name="ordering"  class="form-control form-control-sm " value="<%= item.ordering %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
            <div class="col-xs-12 col-sm-8">
                <select id="form[status]" name="status" class="custom-select custom-select-sm" >
                    <option value="novalue">Choose Status</option>
                    <option value="active" <%= (item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
                    <option value="inactive" <%= (item.status == "inactive") ? 'selected="selected"' : '' %>  >Inactive</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="special" class="col-sm-2 col-form-label text-sm-right">Special</label>
            <div class="col-xs-12 col-sm-8">
                <select id="form[special]" name="special" class="custom-select custom-select-sm" >
                    <option value="novalue">Choose Special</option>
                    <option value="active" <%= (item.special == "active") ? 'selected="selected"' : '' %> >Active</option>
                    <option value="inactive" <%= (item.special == "inactive") ? 'selected="selected"' : '' %>  >Inactive</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="category" class="col-sm-2 col-form-label text-sm-right">Category</label>
            <div class="col-xs-12 col-sm-8">
                <%-  sectionboxHelper('category_id', categoryItems,item.category_id)%>
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Description</label>
            <div class="col-xs-12 col-sm-8">
                <textarea type="text" name="description" class="form-control form-control-sm" ><%= item.description %></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="content" class="col-sm-2 col-form-label text-sm-right required">Content</label>
            <div class="col-xs-12 col-sm-8 " >
                <textarea id="id_content" name="content" ><%= item.content %></textarea>

            </div>
        </div>
        <div class="form-group row">
            <label for="thumb" class="col-sm-2 col-form-label text-sm-right required">Thumb</label>
            <div class="col-xs-12 col-sm-8">
                <input type="file" name="thumb" class="form-control form-control-sm" >
            </div>
        </div>
        <% if(item.id !== undefined && item.id !== ''){ %>
        <div class="form-group row">
            <label for="thumb" class="col-sm-2 col-form-label text-sm-right required">Thumb</label>
            <img src="<%= pathUpload + item.thumb%>" alt="" style="height:50px;">
        </div>
        <% } %>
        
    
    </div>
    <div class="card-footer">
        <div class="col-12 col-sm-8 offset-sm-2">
            <input class="form-control" name="id" value="<%= item.id %>" type="hidden" >
            <input class="form-control" name="image_old" value="<%= item.thumb %>" type="hidden" >
            <input class="form-control" name="category_name" value="<%= item.category_name %>" type="hidden" >
            <button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
            <a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
        </div>
    </div>
</form>
</div>