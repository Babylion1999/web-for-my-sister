<% include ./../../helpers/image %>
<% 
const collection="settings" ; 
const linkPrefix=systemConfig.prefixAdmin + `/${collection}/`; 
const folderUpload 	= `uploads/${collection}/`;
const pathUpload ="backend/adminlte/images/settings/";

%>
<%- locals.flash %>
<% include ./../../elements/errors %>
	<div class="card card-info card-outline">
		<form action="<%= linkPrefix %>save/" method="POST" class="mb-0" name="form-upload" enctype="multipart/form-data">
			<div class="card-body">
				<div class="row">
					<div class="card card-primary card-tabs col-sm-12">
						<div class="card-header p-0 pt-1">
							<ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
								<li class="nav-item" data-name="header">
									<a class="nav-link active" id="header-settings-tab" data-toggle="pill"
										href="#header-settings" role="tab" aria-controls="header-settings"
										aria-selected="true">Header</a>
								</li>
								<li class="nav-item" data-name="footer">
									<a class="nav-link" id="footer-settings-tab" data-toggle="pill"
										href="#footer-settings" role="tab" aria-controls="footer-settings"
										aria-selected="false">Footer</a>
								</li>
                                <li class="nav-item" data-name="contact">
									<a class="nav-link" id="contact-settings-tab" data-toggle="pill"
										href="#contact-settings" role="tab" aria-controls="contact-settings"
										aria-selected="false">Contact</a>
								</li>
								<li class="nav-item" data-name="script">
									<a class="nav-link" id="script-settings-tab" data-toggle="pill"
										href="#script-settings" role="tab" aria-controls="script-settings"
										aria-selected="false">Script</a>
								</li>
							</ul>
						</div>
						<div class="card-body">
							<div class="tab-content" id="custom-tabs-one-tabContent">
								<div class="tab-pane fade active show" id="header-settings" role="tabpanel"
									aria-labelledby="header-settings-tab">
									<div class="form-group row">
										<label for="logoHeader" class="col-sm-2 col-form-label text-sm-right required">Logo</label>
										<div class="col-xs-12 col-sm-8">
                                            <input type="file" name="logoHeader" class="form-control form-control-sm">
                                        </div>
									</div>
									<% if(item.id !== undefined && item.id !== ''){ %>
										<div class="form-group row">
											<label for="thumb" class="col-sm-2 col-form-label text-sm-right required">Logo review</label>
											<img src="<%= pathUpload + item.logoHeader %>" alt="" style="height:50px;">
										</div>
										<% } %>
								</div>
								<div class="tab-pane fade" id="footer-settings" role="tabpanel"
									aria-labelledby="footer-settings-tab">
									
									<div class="form-group row">
										<label for="name" class="col-sm-2 col-form-label text-sm-right required">Copyright</label>
										<div class="col-xs-12 col-sm-8">
											<input type="text" name="copyright" value="<%= item.copyright %>" class="form-control form-control-sm " readonly>
										</div>
									</div>
									<div class="form-group row">
										<label for="content" class="col-sm-2 col-form-label text-sm-right required">Content</label>
										<div class="col-xs-12 col-sm-8 " >
											<textarea id="id_content" name="content" ><%= item.content %></textarea>
										</div>
									</div>
									<div class="form-group row">
										<label for="logoFooter" class="col-sm-2 col-form-label text-sm-right required">Logo</label>
										<div class="col-xs-12 col-sm-8">
                                            <input type="file" name="logoFooter" class="form-control form-control-sm" >
                                        </div>
									</div>
									<% if(item.id !== undefined && item.id !== ''){ %>
										<div class="form-group row">
											<label for="thumb" class="col-sm-2 col-form-label text-sm-right required">Logo review</label>
											<img src="<%= pathUpload + item.logoFooter %>" alt="" style="height:50px;">
										</div>
										<% } %>
									

									<div class="form-group row">
										<div class="col-sm-2 col-form-label"></div>
										<div class="col-xs-12 col-sm-8">
										</div>
									</div>

								</div>
                                <div class="tab-pane fade" id="contact-settings" role="tabpanel"
									aria-labelledby="footer-contact-tab">
									
									<div class="form-group row">
										<label for="facebook" class="col-sm-2 col-form-label text-sm-right required ">facebook</label>
										<div class="col-xs-12 col-sm-8">
											<input type="text" name="facebook" value="<%= item.facebook %>" class="form-control form-control-sm " >
										</div>
									</div>
                                    <div class="form-group row">
										<label for="instagram" class="col-sm-2 col-form-label text-sm-right required">instagram</label>
										<div class="col-xs-12 col-sm-8">
											<input type="text" name="instagram" value="<%= item.instagram %>" class="form-control form-control-sm " >
										</div>
									</div>
                                    <div class="form-group row">
										<label for="email" class="col-sm-2 col-form-label text-sm-right required">email</label>
										<div class="col-xs-12 col-sm-8">
											<input type="email" name="email" value="<%= item.email %>" class="form-control form-control-sm " >
										</div>
									</div>
                                    <div class="form-group row">
										<label for="zalo" class="col-sm-2 col-form-label text-sm-right required">zalo</label>
										<div class="col-xs-12 col-sm-8">
											<input type="number" name="zalo" value="<%= item.zalo %>" class="form-control form-control-sm " >
										</div>
									</div>

                                    <div class="form-group row">
										<label for="phone" class="col-sm-2 col-form-label text-sm-right required">phone</label>
										<div class="col-xs-12 col-sm-8">
											<input type="number" name="phone" value="<%= item.phone %>" class="form-control form-control-sm " >
										</div>
									</div>
                                   
                                    <div class="form-group row">
										<label for="address" class="col-sm-2 col-form-label text-sm-right required">Address</label>
										<div class="col-xs-12 col-sm-8">
											<input type="text" name="address" value="<%= item.address %>" class="form-control form-control-sm " >
										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="script-settings" role="tabpanel"
									aria-labelledby="footer-script-tab">
									
									<div class="form-group row">
										<label for="map" class="col-sm-2 col-form-label text-sm-right required ">map</label>
										<div class="col-xs-12 col-sm-8">
											<input type="text" name="map" value="<%= item.map %>" class="form-control form-control-sm " >
										</div>
									</div>
                                    
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="col-12 col-sm-8 offset-sm-2">
					<input class="form-control" name="id" value="<%= item.id %>" type="hidden">
					

					<input name="image_header_old" value="<%= item.logoHeader %>" type="" />
					<input name="image_header_uploaded" value="" type="hidden" id="image_header_uploaded" />

					<input name="image_footer_old" value="<%= item.logoFooter %>" type="" />
					<input name="image_footer_uploaded" value="" type="hidden" id="image_footer_uploaded" />

					<input type="hidden" name="name" value="">
					<button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
					<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
				</div>
			</div>
		</form>
	</div>

	<script>
		ClassicEditor
			.create( document.querySelector( '#editor' ) )
			.catch( error => {
				console.error( error );
			} );
			
			imgInp.onchange = evt => {
				const [file] = imgInp.files
				if (file) {
					showImage.src = URL.createObjectURL(file)
					image_header_uploaded.setAttribute('value','uploaded')
				}
			}

			logoFooter.onchange = evt => {
				const [file] = logoFooter.files
				if (file) {
					showLogoFooter.src = URL.createObjectURL(file)
					image_footer_uploaded.setAttribute('value','uploaded')
				}
			}
			function notImage(e,folder) {
					e.setAttribute('src',folder+'no-avatar.png')
			}
	</script>
	<script src="adminlte/js/jquery/jquery.min.js"></script>
	<script>
		$(document).ready(function() {
			let settings = localStorage.getItem('settings') || 'header';
			$('form .nav-item').each(function( i, val ) {
				let name = $(val).data('name');
				if (name == settings) {			
					$(val).children().click();
				}
			})
			$('form .nav-item').click(function() {
				localStorage.setItem('settings',$(this).data('name'))
			});
		});
	</script>