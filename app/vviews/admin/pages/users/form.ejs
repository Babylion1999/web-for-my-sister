
<% 
const collection = "users";
const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
const pathUpload ="adminlte/images/";
%>

<% include ./../../helpers/sectionbox %>


<% include ./../../elements/errors %>
<%= JSON.stringify(groupItems) %>
<%= JSON.stringify(item) %>

<div class="card card-info card-outline">
<form action="<%= linkPrefix %>save/" method="POST" class="mb-0"  enctype="multipart/form-data">
    <div class="card-body">
    
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="name" class="form-control form-control-sm" value="<%= item.name %>"  >
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label text-sm-right required">Username</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="username" class="form-control form-control-sm" value="<%= item.username %>"  >
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label text-sm-right required">Password</label>
            <div class="col-xs-12 col-sm-8">
                <input type="password" name="password" class="form-control form-control-sm" value="<%= item.password %>"  >
            </div>
        </div>
       
        <% if(item.id !== undefined && item.id !== ''){ %>
        <div class="form-group row">
            <label for="avatar" class="col-sm-2 col-form-label text-sm-right required">Avatar</label>
            <img src="<%= pathUpload + item.avatar%>" alt="" style="height:50px;">
        </div>
        <% } %>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
            <div class="col-xs-12 col-sm-8">
                <input type="text" name="ordering"  class="form-control form-control-sm " value="<%= item.ordering %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
            <div class="col-xs-12 col-sm-8">
                <select id="form[status]" name="status" class="custom-select custom-select-sm" >
                    <option value="novalue">Choose Status</option>
                    <option value="active" <%= (item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
                    <option value="inactive" <%= (item.status == "inactive") ? 'selected="selected"' : '' %>  >Inactive</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="group" class="col-sm-2 col-form-label text-sm-right">Group</label>
            <div class="col-xs-12 col-sm-8">
                <%-  sectionboxHelper('group_id', groupItems,item.group_id) %>
            </div>
        </div>
        
        
        <div class="form-group row">
            <label for="avatar" class="col-sm-2 col-form-label text-sm-right required">Avatar</label>
            <div class="col-xs-12 col-sm-8">
                <input type="file" name="avatar" class="form-control form-control-sm" >
            </div>
        </div>
        
    
    </div>
    <div class="card-footer">
        <div class="col-12 col-sm-8 offset-sm-2">
            <input class="form-control" name="id" value="<%= item.id %>" type="hidden" >
            <input class="form-control" name="image_old" value="<%= item.avatar %>" type="hidden" >
            <input class="form-control" name="group_name" value="<%= item.group_name %>" type="hidden" >
            <button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
            <a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
        </div>
    </div>
</form>
</div>